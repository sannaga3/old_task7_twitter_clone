<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8">
    <title>Whisper_Confirm</title>
    <link href="/assets/normalize.css" rel="stylesheet">
    <link href="/assets/new.scss" rel="stylesheet">
  </head>
  <body>
    <div class="contents_wrapper">
      <header>
        <%= render 'header' %>
      </header>
      <div>
        <%= form_with(model: @post, local: true ,url: posts_path, action: :create) do |form| %>
          <% if @post.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
              <ul>
                <% @post.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="whisper_wrapper">
            <div class="field">
              <%= form.label :'内容' %>
              <%= form.hidden_field :content %>
              <%= @post.content %>
              <p></p>
            </div> 
            <div class="button_area">
              <div class="whisper_button">
                <%= form.submit value="ささやく" %>
              </div>
              <div class="back_button">
                <%= form.submit value="戻る", name: 'back' %>
              </div>
            </div>
          </div>
        <% end %>
        <footer>
          <%= render 'footer' %>
        </footer>
      </div>
    </div>
  </body>
</html>